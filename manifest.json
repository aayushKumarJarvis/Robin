{
  
  "name": "Robin",
  "description": "Chrome plugin for visually browsing the products",
  "version": "0.0.1",
  "manifest_version": 2,

  "permissions": [
    "webRequest",
    "background",
    "tabs",
    "https://api.indix.com/*",
    "https://docs.google.com/*",
    "http://jsonip.com/*"
    ],
  "background": {
    "persistent": true,
    "scripts": ["jquery-1.11.0.min.js"]
  },
  "icons": { 
    "128": "robin_new_icon.png",
    "16": "robin_16.png"
  },
  "browser_action": {
    "default_icon": "robin_16.png",
    "default_title": "Robin - Powered By Indix",
    "default_popup": "popup.html"
  }
}
